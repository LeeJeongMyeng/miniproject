<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.project.sample.dao.NoticDao">

    <!-- 공지사항 갯수 확인(페이징용) -->
    <select id="get_Notic_Count" parameterType="Notic" resultType="_int">
        SELECT COUNT(*) FROM CTG_NOTIC
        WHERE
        <choose>
            <when test="Search_Mode == 3"> <!-- 내용만검색 -->
                CONTENT
            </when>
            <when test="Search_Mode == 2"> <!-- 제목만검색 -->
                TITLE
            </when>
            <otherwise>
                CONCAT(TITLE,CONTENT) <!-- 전체검색 -->
            </otherwise>
        </choose>
        LIKE CONCAT('%',#{title,jdbcType=VARCHAR},'%')
    </select>

    <!-- 공지사항 리스트 select -->
    <select id="get_Notic_List" parameterType="Notic" resultType="Notic">

        SELECT
            (@ROWNUM := @ROWNUM + 1) as ROWNUM,N.*
        FROM (
            SELECT
                NTNO,
                TITLE,
                IMPWHETHER,
                REGDATE,
                UPTDATE,
                DELDATE
            FROM CTG_NOTIC
            WHERE
            <choose>
                <when test="Search_Mode == 3"> <!-- 내용만검색 -->
                    CONTENT
                </when>
                <when test="Search_Mode == 2"> <!-- 제목만검색 -->
                    TITLE
                </when>
                <otherwise>
                    CONCAT(TITLE,CONTENT) <!-- 전체검색 -->
                </otherwise>
            </choose>
            LIKE
                CONCAT('%',#{title,jdbcType=VARCHAR},'%')
            AND NOTICSTATE = 1
            ORDER BY IMPWHETHER DESC) AS N,(SELECT @rownum := 0) r <!-- 중요여부순으로 ORDER BY하고 ROWNUM적용 -->
        HAVING ROWNUM BETWEEN #{st_rownum,jdbcType=NUMERIC} AND #{en_rownum,jdbcType=NUMERIC}
        ORDER BY ROWNUM
    </select>

    <select id="get_Notic" parameterType="_int" resultType="Notic">
        SELECT
            NTNO,
            TITLE,
            CONTENT,
            IMPWHETHER,
            REGDATE
        FROM CTG_NOTIC
        WHERE NTNO =#{ntno,jdbcType=NUMERIC};
    </select>

    <select id="get_Notic_files" parameterType="_int" resultType="Notic">
        SELECT
            *
        FROM
            CTG_NOTIC_FILES
        WHERE
            NTNO = #{ntno,jdbcType=NUMERIC};
    </select>

</mapper>